@model MuzikantenApi.Models.Instrument
@{
    ViewData["Title"] = "CreateInstrumentSpecial";
}

<h1>CreateInstrumentSpecial</h1>

<h1>@Html.Raw($"Create VerzamelObject voor {Model.Muzikant.Voornaam} {Model.Muzikant.Achternaam}")</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInstrumentSpecial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bijnaam" class="control-label"></label>
                <input asp-for="Bijnaam" class="form-control" />
                <span asp-validation-for="Bijnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Waarde" class="control-label"></label>
                <input asp-for="Waarde" class="form-control" />
                <span asp-validation-for="Waarde" class="text-danger"></span>
            </div>

            @Html.HiddenFor(m => m.MuzikantId)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
