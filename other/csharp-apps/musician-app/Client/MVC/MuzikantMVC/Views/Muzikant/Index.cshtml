@model IEnumerable<MuzikantenApi.Models.Muzikant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-controller="Muzikant" asp-action="ActieveMuzikanten" class="btn btn-primary">Actieve Verzamelaars</a>
    <a asp-controller="Instrument" asp-action="Top3" class="btn btn-primary">Top 3</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MuzikantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartJaar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StopJaar)
            </th>
            <th>@Html.DisplayNameFor(model => model.Instrumenten)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MuzikantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Voornaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Achternaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartJaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StopJaar)
                </td>
                <td>
                    @if (item.Instrumenten != null)
                    {
                        foreach (var instrumenten in item.Instrumenten)
                        {
                            @Html.Raw(instrumenten.Naam);
                        }
                    }
                </td>
<td>
                    <a asp-action="Edit" asp-route-id="@item.MuzikantId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MuzikantId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MuzikantId">Delete</a> |
                    <a asp-controller="Instrument" asp-action="CreateInstrumentSpecial" asp-route-id="@item.MuzikantId" class="btn btn-primary">Instrument toevoegen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>Aantal muzikanten is: @Model.Count()</p>

<p>---------->---------->---------->----------</p>

Overzicht mutaties in deze sessie
<ul>
    @foreach (string item in ViewBag.SessieInfo)
    {
        <li>@Html.Raw(item)</li>
    }
</ul>