<UserControl x:Class="PitchPerfectHearingTest.Views.Introduction.IntroductionDialog4Of4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PitchPerfectHearingTest.Views.Introduction"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Source="/Images/Dialog4Of4.png" />
        <StackPanel Grid.Row="0" Grid.Column="0">
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label HorizontalAlignment="Center">Clik op Volgende en sluit uw ogen</Label>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button x:Name="Dialog1Of4" Content="Volgende" HorizontalAlignment="Center" Height="40" Width="200" 
                    Command="{Binding SwitchToHearingTest}"/>
        </StackPanel>
    </Grid>
</UserControl>
