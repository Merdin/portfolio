<UserControl x:Class="PitchPerfectHearingTest.Dialogs.AppointmentSuccessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PitchPerfectHearingTest.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Rectangle Grid.Column="0" Grid.RowSpan="1000" Grid.ColumnSpan="1000">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#74b9ff" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Margin="0,125" Orientation="Vertical">
        <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Content="Bevestiging"/>
        <TextBlock FontWeight="Black" Margin="0,10" HorizontalAlignment="Center" Text="Je afspraak is nu bevestigd"/>
        <Button Style="{StaticResource BtnStyle1}" Width="123" Content="Terug naar resultaat" Command="{Binding BackToResultPage}"/>

    </StackPanel>
    </Grid>
</UserControl>
