@using Library.Models
@model Library.Models.Constraint
@{
    ViewBag.Title = "Module wijzigen";
}

<div class="flex justify-center">
    <form asp-controller="Constraint" asp-action="Edit" class="space-y-8 divide-y divide-gray-200 p-4 bg-white border rounded-lg">
        @Html.AntiForgeryToken()
        <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
            <div class="space-y-6 sm:space-y-5">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900 block">
                        Constraint wijzigen: @Model.Id - @Model.Name
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500 inline">
                        Deze informatie kan gewijzigd worden door leden van de ...
                    </p>
                </div>

                <div class="space-y-6 sm:space-y-5">
                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Naam
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input asp-for="Name" type="text" id="name" name="name" class="max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md">
                        </div>
                    </div>

                    <div class="w-full sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="description" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Beschrijving
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <textarea class="w-full h-48 appearance-none border rounded focus:outline-none" asp-for="Description" id="description" name="description"></textarea>
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="type" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Type
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <select class="appearance-none block w-full px-3 px-4 h-12 bg-gray-200 text-gray-700 border rounded leading-tight focus:outline-none focus:bg-white" asp-for="Type" id="type" type="checkbox">
                                <option value="@Model.Type">@Model.Type</option>
                            </select>
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="value" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Waarde
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input asp-for="Value" type="text" id="value" name="value" class="max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md">
                        </div>
                    </div>

                    <div class="pt-5">
                        <div class="flex justify-center">
                            <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Opslaan
                            </button>
                            <a type="button" asp-action="Details" asp-route-id="@Model.Id" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
                                Annuleren
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>