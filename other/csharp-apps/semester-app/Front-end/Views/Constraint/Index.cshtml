@model IEnumerable<Library.Models.Constraint>
@{
    ViewBag.Title = "Constraints";
}

<a asp-controller="Constraint" asp-action="Create" class="hover:text-green-300">Constraint aanmaken</a>
<input type="text" id="searchInput" onkeyup="searchBar()" placeholder="Zoek naar constraints.."/>
<div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                <table id="searchTable" class="min-w-full divide-y divide-gray-200">

                    <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Naam
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Value
                        </th>
                    </tr>
                    </thead>

                    <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null)
                    {
                        @foreach (var c in Model)
                        {
                            <tr class="hover:bg-gray-100 cursor-pointer" onclick="openUrlWithId('/Constraint/Details/', @c.Id);">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @c.Name
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @c.Type
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @c.Value
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                </td>
                            </tr>
                        }
                    }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>