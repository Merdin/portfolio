@model Library.Models.User

@{
    var receivesEmailNotifications = Model.ReceivesEmailNotifications ? "checked" : null;
    ViewBag.Title = "Gebruiker aanpassen";
}

<div class="flex justify-center" x-data="{ 'accountDeletion': false }">
    <form asp-controller="User" asp-action="Edit" class="space-y-8 divide-y divide-gray-200 p-4 bg-white border rounded-lg">
        @Html.AntiForgeryToken()
        <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
            <div class="space-y-6 sm:space-y-5">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900 block">
                        Persoonlijke informatie van @Model.Name
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500 inline">
                        Aanpassingen hierin zijn niet automatisch te herstellen, wees voorzichtig.
                    </p>
                </div>

                <div class="space-y-6 sm:space-y-5">
                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Naam
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input asp-for="Name" type="text" id="name" name="name" class="max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md">
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="email" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            E-mailadres
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input asp-for="Email" type="text" id="email" name="email" autocomplete="email" class="block max-w-lg w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md">
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="grade" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Studiepunten
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input asp-for="Grade" type="number" id="grade" name="grade" class="block max-w-lg w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md">
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="credits" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Leerjaar
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input asp-for="Credits" type="number" id="credits" name="credits" class="block max-w-lg w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md">
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-4 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                        <label for="emailNotifications" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                            Notificaties ontvangen per mail
                        </label>
                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <input class="border rounded focus:outline-none" asp-for="ReceivesEmailNotifications" id="emailNotifications" type="checkbox" name="emailNotifications" checked="@receivesEmailNotifications"/>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="pt-5">
            <div class="flex justify-center">
                <a href="#" @@click="accountDeletion = true" class="mr-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Verwijderen
                </a>
                <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Annuleren
                </button>
                <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Opslaan
                </button>
            </div>
        </div>
    </form>

    <div x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0 scale-90" x-transition:enter-end="opacity-100 scale-100" x-transition:leave="ease-in duration-300" x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-90" class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true" x-show="accountDeletion" x-cloak>
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                        <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                            Account verwijderen
                        </h3>
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">
                                Weet je zeker dat u het account van @Model.Name wilt verwijderen? Alle data van deze gebruiker wordt dan permanent verwijderd van onze servers.
                            </p>
                        </div>
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">
                                De gebruiker zal de registratie opnieuw moeten voltooien om de applicatie weer te kunnen gebruiken.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                    <form asp-controller="User" asp-action="Delete">
                        <input type="hidden" name="userId" id="userId" value="@Model.Id">
                        <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                            Verwijderen
                        </button>
                        <button @@click="accountDeletion = false" type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
                            Annuleren
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>